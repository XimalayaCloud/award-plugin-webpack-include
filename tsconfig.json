{
  "compilerOptions": {
    "outDir": "src/lib",
    "declaration": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "rootDir": "src/plugin",
    "baseUrl": "src/plugin",
    "jsx": "react",
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "removeComments": false,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
